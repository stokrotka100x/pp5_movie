{% extends "GrauchoMoviesBundle::layout.html.twig" %}

{% block header %}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
{% endblock %}

{% block menu %}
	<ul class="list-group">
		<li class="list-group-item"><a href="{{path('graucho_movies_homepage')}}"><span class="glyphicon glyphicon-home"></span> Home</a></li>
		<li class="list-group-item"><a href="{{path('graucho_movies_homepage')}}"><span class="glyphicon glyphicon-envelope"></span> Problem przy logowaniu?</a></li>
		<li class="list-group-item"><img src="{{asset('bundles/grauchomovies/adv/01.jpg')}}" height="165" width="320"></li>
	</ul>
{% endblock %}

{% block content %}
	<div class="row">
	
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="" style="margin-bottom:20px;margin-top:20px;">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
	</div>
	<div class="page-header"></div>
{%endblock%}